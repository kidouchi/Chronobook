<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_card"
                android:elevation="5dp"
                android:paddingBottom="5dp">

    <RelativeLayout
        android:id="@+id/card_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:transitionName="header">

        <ImageView
            android:id="@+id/placeholder_image_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_cake_grey_600_36dp"/>

        <TextView
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/event_text_size"
            tools:drawableLeft="@drawable/ic_beach_access_white_36dp"
            tools:text="My Long Event Title"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/event_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_header"
        android:drawableLeft="@drawable/ic_event_green_400_36dp"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="#424242"
        android:textSize="@dimen/event_text_size"
        tools:text="December 12 - December 15"/>

    <TextView
        android:id="@+id/event_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/event_date"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_time_grey_36dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:textColor="#424242"
        android:textSize="@dimen/event_text_size"
        tools:text="12:00 pm - 12:00 am"/>

    <TextView
        android:id="@+id/event_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_time"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_location_on_red_400_36dp"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" android:singleLine="true"
        android:textColor="#424242" android:textSize="@dimen/event_text_size"
        tools:text="My Location"/>

